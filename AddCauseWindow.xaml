<Window x:Class="PlanningScheduleApp.AddCauseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanningScheduleApp"
        mc:Ignorable="d"
        Title="Добавить причину" Height="135" Width="340" ResizeMode="NoResize">
    <Grid>
        <Grid>
            <StackPanel Orientation="Horizontal" Margin="5 5 5 5">
                <TextBox Name="CauseTBX" Width="200" Tag="Причина" ToolTip="Причина" VerticalAlignment="Top" Margin="5 10 5 0" FontSize="14" Style="{StaticResource TextBoxWithToolTipStyle}"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Уважительная?" HorizontalAlignment="Center" FontSize="14"/>
                    <CheckBox Name="TypeCB" HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <Button Name="AddCauseBtn" Width="auto" Content="Добавить" Padding="0" VerticalAlignment="Bottom" Click="AddCauseBtn_Click"/>
        </Grid>
    </Grid>
</Window>
